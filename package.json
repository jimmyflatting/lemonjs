{
  "name": "lemon",
  "version": "0.0.1",
  "description": "A minimal webserver using Node.js and TypeScript",
  "keywords": [
    "webserver",
    "typescript"
  ],
  "homepage": "https://github.com/jimmyflatting/lemonjs",
  "bugs": {
    "url": "https://github.com/jimmyflatting/lemonjs/issues"
  },
  "author": "Jimmy Flatting <jimmy.flatting@icloud.com> (https://github.com/jimmyflatting)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmyflatting/lemonjs.git"
  },
  "files": [
    "build"
  ],
  "type": "commonjs",
  "main": "build/lemon.js",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput & node --watch build/lemon.js",
    "start": "node build/lemon.js",
    "build": "tsc",
    "ci": "npm run build && npm run format && npm run check-format && npm run test",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  }
}

{
    "name": "@jimmyflatting/lemonjs",
    "private": false,
    "version": "1.0.3",
    "description": "A lightweight web framework for building web applications with TypeScript and Node.js.",
    "author": "Jimmy Flatting (https://github.com/jimmyflatting)",
    "main": "build/lemon.js",
    "types": "build/lemon.d.ts",
    "files": [
        "build",
        "example",
        "README.md"
    ],
    "scripts": {
        "build": "rm -rf build && tsc -p tsconfig.json",
        "start": "node build/index.js",
        "dev": "nodemon --watch '**/*.ts' --ext ts --exec 'ts-node index.ts'",
        "test": "jest",
        "bump:patch": "./scripts/bump-version.sh patch && git push origin main",
        "bump:minor": "./scripts/bump-version.sh minor && git push origin main",
        "bump:major": "./scripts/bump-version.sh major && git push origin main"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/supertest": "^6.0.3",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2"
    },
    "dependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.0",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "typescript": "^5.9.3"
    }
}

{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "outDir": "build",
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "build"]
}
